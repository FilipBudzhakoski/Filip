from fastapi import FastAPI
from pydantic import BaseModel
import random

app = FastAPI()

class VehicleData(BaseModel):
    mileage: int
    error_codes: list

@app.post("/predict")
def predict_maintenance(data: VehicleData):
    # Simple predictive logic (replace with ML later)
    prediction = "No immediate issues"
    if data.mileage > 100000:
        prediction = "Brake pads likely need replacement soon"
    if "P0420" in data.error_codes:  # Example OBD-II code
        prediction = "Catalytic converter efficiency below threshold"

    return {
        "prediction": prediction,
        "confidence": round(random.uniform(0.7, 0.95), 2)
    }
